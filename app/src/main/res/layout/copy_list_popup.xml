<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/default_popup_background"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/copy_list_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/copy_list_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/list_menu_copy_list"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/font"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_copy"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/copy_list_whole_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_button"
            >
            
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_whole_list"
                app:tint="@color/white"
                />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:text="@string/list_copy_whole_list"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/copy_list_unpurchased_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_button"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_cart"
                app:tint="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:text="@string/list_copy_unpurchased_items_list"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/copy_list_purchased_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_button"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_cart_checked"
                app:tint="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:text="@string/list_copy_purchased_items_list"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/copy_list_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/app_base"
            android:background="@drawable/custom_button_transparent"
            />

    </LinearLayout>


</LinearLayout>