<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/checked_thumb"/>
            <stroke android:width="4dp" android:color="@color/checked_track"/>
            <size android:width="22dp" android:height="22dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/unchecked_thumb"/>
            <stroke android:width="4dp" android:color="@color/unchecked_track"/>
            <size android:width="22dp" android:height="22dp"/>
        </shape>
    </item>
</selector>